<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="9" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="category"/>
            </not>
        </preConditions>
        <createTable tableName="category">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="type" type="varchar(20)"/>
        </createTable>
    </changeSet>

    <changeSet id="10" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="subcategory"/>
            </not>
        </preConditions>
        <createTable tableName="subcategory">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="category_id" type="bigint" >
                <constraints foreignKeyName="fk_id_category_references_category" referencedTableName="category" referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="11" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="title"/>
            </not>
        </preConditions>
        <createTable tableName="title">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(30)"/>
            <column name="category_id" type="bigint" >
                <constraints foreignKeyName="fk_id_category_references_category" referencedTableName="category" referencedColumnNames="id" />
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
