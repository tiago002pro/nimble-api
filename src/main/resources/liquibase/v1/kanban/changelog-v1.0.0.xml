<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="8" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="list_cards"/>
            </not>
        </preConditions>
        <createTable tableName="list_cards">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="title" type="varchar(20)"/>
        </createTable>
    </changeSet>

    <changeSet id="9" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="card" />
            </not>
        </preConditions>
        <createTable tableName="card">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="id_listcard" type="bigint" >
                <constraints foreignKeyName="fk_id_listCards_references_listCards" referencedTableName="list_cards" referencedColumnNames="id" />
            </column>
            <column name="title" type="varchar(200)"/>
            <column name="description" type="varchar(200)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
