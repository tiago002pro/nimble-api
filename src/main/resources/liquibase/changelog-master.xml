<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

<!--    <include file="classpath:/liquibase/v7/changelog-master-v7.xml"/>-->
<!--    <include file="classpath:/liquibase/v8/changelog-master-v8.xml"/>-->
    
    <changeSet id="1" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="person"/>
            </not>
        </preConditions>
        <createTable tableName="person">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(200)"/>
            <column name="sexo" type="varchar(10)"/>
            <column name="cpf" type="varchar(20)"/>
            <column name="rg" type="varchar(20)"/>
            <column name="cnpj" type="varchar(20)"/>
            <column name="ie" type="varchar(20)"/>
            <column name="birth_date" type="date"/>
            <column name="foundation_date" type="date"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="list_cards"/>
            </not>
        </preConditions>
        <createTable tableName="list_cards">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="title" type="varchar(20)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="tiagobarbosa02@outlook.com">
        <preConditions>
            <not>
                <tableExists tableName="card" />
            </not>
        </preConditions>
        <createTable tableName="card">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>
            <column name="id_listcard" type="bigint" >
                <constraints foreignKeyName="fk_id_listCards_references_listCards" referencedTableName="list_cards" referencedColumnNames="id" />
            </column>
            <column name="title" type="varchar(200)"/>
            <column name="description" type="varchar(200)"/>
        </createTable>
    </changeSet>
</databaseChangeLog>
